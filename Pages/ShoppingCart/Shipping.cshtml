@page
@model SkateShop.Pages.ShoppingCart.ShippingModel
@{
    ViewData["Title"] = "Shipping";
}

<div class="row">
    <div class="col"></div>
    <div class="col bg-light m-5 p-5">
        <div>
            <h2>Address & Shipping</h2>
            <form method="post">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Firstname</label>
                        <input type="text" asp-for="FirstName" class="form-control" placeholder="Firstname">
                    </div>
                    <div class="form-group col-md-6">
                        <label>Lastname</label>
                        <input type="text" asp-for="LastName" class="form-control" placeholder="Lastname">
                    </div>
                </div>
                <div class="form-group">
                    <label>Address</label>
                    <input type="text" asp-for="Address" class="form-control" placeholder="Kungsgatan">
                </div>
                <div class="form-group">
                    <label>Phonenumber</label>
                    <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="XXX-XXXXXXX">
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="freight" value="PostNord" />
                        <label class="form-check-label" for="gridCheck">
                            PostNord + 49 kr
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="freight" value="DHL" />
                        <label class="form-check-label" for="gridCheck">
                            DHL Free
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="freight" value="Bring" />
                        <label class="form-check-label" for="gridCheck">
                            Bring + 79 kr
                        </label>
                    </div>
                </div>
                <a class="btn btn-dark" asp-page="/ShoppingCart/Index">Back</a>
                <a class="btn btn-primary" asp-page="/ShoppingCart/Payment">Continue</a>
            </form>
        </div>
    </div>
    <div class="col"></div>
</div>
