@page
@model SkateShop.Pages.ShoppingCart.ShippingModel
@{
    ViewData["Title"] = "Shipping";
}

<div class="row">
    <div class="col"></div>
    <div class="col">
        <div>
            <form method="post">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Firstname</label>
                        <input type="text" asp-for="FirstName" class="form-control" placeholder="Firstname">
                    </div>
                    <div class="form-group col-md-6">
                        <label>Lastname</label>
                        <input type="text" asp-for="LastName" class="form-control" placeholder="Lastname">
                    </div>
                </div>
                <div class="form-group">
                    <label>Address</label>
                    <input type="text" asp-for="Address" class="form-control" placeholder="Kungsgatan">
                </div>
                <div class="form-group">
                    <label>Phonenumber</label>
                    <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="XXX-XXXXXXX">
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="gridCheck">
                        <label class="form-check-label" for="gridCheck">
                            Check me out
                        </label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Sign in</button>
            </form>
        </div>
    </div>
    <div class="col"></div>
</div>
